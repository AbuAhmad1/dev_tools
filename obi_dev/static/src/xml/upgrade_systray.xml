<?xml version="1.0" encoding="UTF-8"?>

<templates>
  <t t-name="obi_dev.systray.UpgradeMenuItems">
    <div>
        <span>Todo: upgrade by directory</span>
        <span>Todo: upgrade all/all custom</span>
    </div>
    <t t-if="_.isEmpty(modules)">
        <div class="dropdown-item-text text-center">
            <span>No custom modules.</span>
        </div>
    </t>
    <t t-foreach="modules" t-as="module">
        <div class="o_obi_dev_module" t-att-data-module_id="module.id">
            <a t-esc="module.name"/>
        </div>
    </t>
  </t>

  <t t-name="obi_dev.systray.UpgradeMenu">
      <li class="o_obi_upgrade_systray">
          <a class="dropdown-toggle o-no-caret" data-toggle="dropdown" data-display="static" aria-expanded="false" title="Upgrade" href="#" role="button">
              <i class="fa fa-arrow-circle-up" role="img" aria-label="Upgrade"/> <span class="o_notification_counter badge badge-pill"/>
          </a>
          <div class="dropdown-menu dropdown-menu-right" role="menu">
              <div class="o_obi_dev_upgrade_items"/>
          </div>
      </li>
  </t>
</templates>